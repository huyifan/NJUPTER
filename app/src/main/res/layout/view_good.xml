<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="768px"
    android:layout_height="350px"
    android:background="#fff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/good_image"
        android:layout_width="280px"
        android:layout_height="280px"
        android:scaleType="fitXY"
        android:src="@drawable/ic_p1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <LinearLayout
            android:id="@+id/ly_good_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5px"
            android:gravity="center_vertical"
            android:paddingLeft="10px">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/ic_good_title" />

            <TextView
                android:id="@+id/good_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:maxLines="1"
                android:text="我是标题啊啊"
                android:textColor="#353333"
                android:textSize="38px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_good_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ly_good_title"
            android:paddingLeft="10px">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/ic_good_des" />

            <TextView
                android:id="@+id/good_des"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="10px"
                android:maxLines="2"
                android:text="aaaadadaddaadadadadadadaadadswewwwwwwwwwwwwwwwwdadaddsadsadsadad"
                android:textColor="#a6a4a4"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_good_money"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center"
            android:layout_below="@+id/ly_good_des"
            >


            <ImageView
                android:id="@+id/id_ic_money"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/ic_money"/>

            <TextView
                android:id="@+id/good_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75"
                android:textSize="38px"
                android:textColor="#c7e93131"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_good_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ly_good_money"
            android:paddingLeft="10px">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/ic_good_author" />

            <TextView
                android:id="@+id/good_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="oneOrdianry"
                android:textSize="28px"
                android:textColor="#353333" />


        </LinearLayout>

        <TextView
            android:id="@+id/good_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300px"
            android:layout_below="@id/ly_good_date"
            android:textSize="28px"
            android:text="2016-12-12"
            android:textColor="#b5b6b5" />

    </RelativeLayout>


</LinearLayout>